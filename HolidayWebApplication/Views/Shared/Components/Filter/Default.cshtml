<div>
    <form asp-action="ListAvailable" asp-controller="PropertyListing" method="get">
        <div>
            <label for="startDate">Start Date:</label>
            <input type="text" id="startDate" name="start" placeholder="YYYY-MM-DD" required />

            <label for="endDate">End Date:</label>
            <input type="text" id="endDate" name="end" placeholder="YYYY-MM-DD" required />

            <button type="submit">Search</button>
        </div>


        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</div>

